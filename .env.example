# JWT 비밀 키 (프로덕션에서는 반드시 변경하세요)
JWT_SECRET_KEY=your-secret-key-change-in-production

# Tavily API 키 (https://tavily.com 에서 발급)
TAVILY_API_KEY=tvly-your-api-key-here

# PostgreSQL 설정 (Docker Compose에서 자동 설정됨)
POSTGRES_DSN=postgresql://mcp_user:mcp_password@localhost:5432/mcp_retriever

# Qdrant 설정 (Docker Compose에서 자동 설정됨)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Redis 설정 (Docker Compose에서 자동 설정됨)
REDIS_URL=redis://localhost:6379/0

# MCP 서버 URL (Auth 서버에서 사용)
MCP_SERVER_URL=http://localhost:8001

# MCP 내부 API 키 (서버 간 통신용)
# 강력한 랜덤 문자열로 변경하세요: openssl rand -hex 32
MCP_INTERNAL_API_KEY=your-internal-api-key-change-in-production

# MCP 서버 전송 방식 (stdio 또는 http)
MCP_TRANSPORT=http

# MCP 서버 포트 (HTTP 모드일 때)
MCP_SERVER_PORT=8001

# Auth Gateway URL (MCP 서버에서 사용)
AUTH_GATEWAY_URL=http://localhost:8000

# 로그 레벨
LOG_LEVEL=INFO