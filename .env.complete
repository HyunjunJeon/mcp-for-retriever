# 완전 통합 서버 설정 (모든 기능 활성화)
MCP_PROFILE=COMPLETE
MCP_SERVER_NAME=mcp-retriever-complete
MCP_TRANSPORT=http
MCP_SERVER_PORT=8001

# 인증 설정
MCP_INTERNAL_API_KEY=your-secure-internal-api-key-change-in-production
AUTH_GATEWAY_URL=http://localhost:8000
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 캐시 설정
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_WEB=300
CACHE_TTL_VECTOR=900
CACHE_TTL_DB=600
CACHE_TTL_ALL=300
ENABLE_CACHE_STATS=true

# 속도 제한 설정
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# 리트리버 설정
TAVILY_API_KEY=your-tavily-api-key
POSTGRES_DSN=postgresql://mcp_user:mcp_password@localhost:5432/mcp_retriever
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# 로깅 설정
LOG_LEVEL=INFO
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false
USE_EMOJI=true
SENSITIVE_FIELDS=password,token,api_key,secret,auth

# 개별 기능 오버라이드 (선택적)
